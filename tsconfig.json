{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@ai-sdk/*": ["node_modules/@ai-sdk/*"],
      "@daydreamsai/*": ["node_modules/@daydreamsai/*"],
      "@underware_gg/*": ["node_modules/@underware_gg/*"]
    }
  },
  "include": [
    "*.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 